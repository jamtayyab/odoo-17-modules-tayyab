<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="stock_quant_package_form_view_inherit" model="ir.ui.view">
        <field name="name">stock.quant.package.form.view.inherit</field>
        <field name="model">stock.quant.package</field>
        <field name="inherit_id" ref="stock.view_quant_package_form" />
        <field name="arch" type="xml">
            <xpath expr="//field[@name='package_type_id']" position="attributes">
                <attribute name="options">
                    {
                        'no_quick_create': True, 'no_create_edit': True,
                    'no_open':
                    True,
                    'no_create': True, 'no_edit': True}
                </attribute>

            </xpath>

        </field>
    </record>
</odoo>