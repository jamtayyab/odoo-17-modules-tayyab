<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- primary|extension Inherited .:Tree:. view for "model" -->
    <record id="stock_lot_form_view_inherit" model="ir.ui.view">
        <field name="name">stock.ot.form.view.inherit</field>
        <field name="model">stock.lot</field>
        <field name="inherit_id" ref="stock.view_production_lot_form" />
        <field name="arch" type="xml">
            <xpath expr="//field[@name='product_id']" position="attributes">
                <attribute name="options">{'no_quick_create': True, 'no_create_edit': True,
                    'no_open':
                    True,
                    'no_create': True, 'no_edit': True}
                </attribute>
            </xpath>

            <xpath expr="//sheet[1]/group[1]/group[1]/field[@name='company_id']" position="attributes">
                <attribute name="options">{'no_quick_create': True, 'no_create_edit': True,
                    'no_open':
                    True,
                    'no_create': True, 'no_edit': True}
                </attribute>
            </xpath>

        </field>
    </record>
</odoo>