<?xml version="1.0" encoding="UTF-8"?>
<templates xml:space="preserve">
    <t t-name="owl_dashboard.OwlSalesDashboard" owl="1">
        <div class="vh-100 overflow-auto bg-muted">
            <div class="row m-3">
                <div class="col-lg-7">
                    <div class="row">
                        <div class="col m-0 p-0">
                            <div class="shadow-sm border m-2 p-4 bg-white">
                                <div class="d-flex align-items-center justify-content-between">
                                    <h1 class="text-primary fw-bold">Custom Sales Dashboard</h1>
                                    <div>
                                        <select class="form-select" t-model="state.period" t-on-change="onChangePeriod" >
                                            <option value="0">Select Period</option>
                                            <option value="7">Last 7 Days</option>
                                            <option value="30">Last 30 Days</option>
                                            <option value="90">Last 90 Days</option>
                                            <option value="365">Last 365 Days</option>
                                        </select>
                                    </div>
                                </div>
                        </div>
                    </div>
                <div class="row">
                    <KpiCard name="'Quotations'" onClick.bind="viewQuotation" percentage="state.quotation.percentage"    value="state.quotation.value"
                    />
                    <KpiCard name="'Orders'"   percentage="state.orders.percentage"  value="state.orders.value"/>  
                    <KpiCard name="'Revenues'" percentage="state.orders.revenue_percentage"  value="state.orders.revenue"/>
                    <KpiCard name="'Average Order'" percentage="state.orders.average_percentage"  value="state.orders.average"/>
                            <!-- <KpiCard name="'Quotations'" /> -->
                    </div>
                
                  </div>
                        <div class="row">
      
                            <div class="col-lg-6 m-0 p-0">
                                <div class="shadow-sm border m-2 p-4 bg-white">
                                    <div class="d-flex align-items-center justify-content-between">
                                        <h3 class="text-primary fw-bold">Top Products</h3>
                                        <div class="px-3 py-1 bg-primary cursor-pointer">
                                            <span class="fa fa-arrow-right text-white"/>
                                        </div>
                                    </div>
                                    <ChartRenderer type="'doughnut'" title="'Top Products'" />

                                <!-- <ChartRenderer type="'doughnut'" title="'Top Products
                                Report'"/> -->
                                </div>
                            </div>


                            <div class="col-lg-6 m-0 p-0">
                                <div class="shadow-sm border m-2 p-4 bg-white">
                                    <div class="d-flex align-items-center justify-content-between">
                                        <h3 class="text-primary fw-bold">Top Sale People</h3>
                                        <div class="px-3 py-1 bg-primary cursor-pointer">
                                            <span class="fa fa-arrow-right text-white"/>
                                        </div>
                                    </div>
                                    <ChartRenderer type="'pie'" title="'Top Products'" />

                                <!-- <ChartRenderer type="'doughnut'" title="'Top Products
                                Report'"/> -->
                                </div>
                            </div>
                            
                        </div>
                
               
                    
            </div>
            <div class="col-lg-5">
                <div class="row">
                    <div class="col-lg-12 m-0 p-0">
                        <div class="shadow-sm border m-2 p-4 bg-white">
                            <div class="d-flex align-items-center justify-content-between">
                                <h3 class="text-primary fw-bold">Monthly Sale </h3>
                                <div class="px-3 py-1 bg-primary cursor-pointer">
                                    <span class="fa fa-arrow-right text-white"/>
                                </div>
                            </div>
                            <ChartRenderer type="'bar'" title="'Top Products'" />

                                <!-- <ChartRenderer type="'doughnut'" title="'Top Products
                        Report'"/> -->
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-lg-12 m-0 p-0">
                        <div class="shadow-sm border m-2 p-4 bg-white">
                            <div class="d-flex align-items-center justify-content-between">
                                <h3 class="text-primary fw-bold">Partner Order</h3>
                                <div class="px-3 py-1 bg-primary cursor-pointer">
                                    <span class="fa fa-arrow-right text-white"/>
                                </div>
                            </div>
                            <ChartRenderer type="'line'" title="'Top Products'" />

                                <!-- <ChartRenderer type="'doughnut'" title="'Top Products
                        Report'"/> -->
                        </div>
                    </div>
                </div>


            </div>
        </div>
        </div>
            
       
    </t>
</templates>