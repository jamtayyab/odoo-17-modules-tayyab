<odoo>
  <data>

    <!-- Top menu item -->
    <record id="action_owl_sale_dashboard" model="ir.actions.client">
      <field name="name">Sale Dashboard</field>
      <field name="tag">owl_dashboard.sale_dashboard</field>
    </record>

    <record id="action_owl_todo_list" model="ir.actions.client">
      <field name="name">Todo List</field>
      <field name="tag">owl_dashboard.owl_action_todo_list</field>
    </record>

    <menuitem name="Dashboard" id="owl_dashboard.menu_root">
      <menuitem
        id="menu_sale_dashboard"
        name="Sale Dashboard"
        sequence="10"
        action="action_owl_sale_dashboard"
      />
      <menuitem
        id="menu_todo_list_template"
        name="Todo List"
        sequence="10"
        action="action_owl_todo_list"
      />
    </menuitem>


  </data>
</odoo>