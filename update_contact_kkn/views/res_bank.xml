<odoo>
    <data>
        <!-- res_bank from view-->
        <record model="ir.ui.view" id="res_bank_form_view">
            <field name="name">res_bank_form_view</field>
            <field name="model">res.bank</field>
            <field name="inherit_id" ref="base.view_res_bank_form"/>
            <field name="arch" type="xml">
                <!--                Bank Address View-->


                <xpath expr="//group[@name='address_details']//field[@name='city']" position="attributes">
                    <attribute name="invisible">1</attribute>
                </xpath>

                <xpath expr="//group[@name='address_details']//field[@name='street2']" position="attributes">
                    <attribute name="invisible">1</attribute>
                </xpath>

                <xpath expr="//group[@name='address_details']//field[@name='street']" position="attributes">
                    <attribute name="required">1</attribute>
                </xpath>
                <xpath expr="//group[@name='address_details']//field[@name='country']" position="attributes">
                    <attribute name="invisible">1</attribute>
                </xpath>
                <xpath expr="//group[@name='address_details']//field[@name='zip']" position="attributes">
                    <attribute name="invisible">1</attribute>
                </xpath>

                <xpath expr="//group[@name='address_details']//field[@name='state']" position="attributes">
                    <attribute name="invisible">1</attribute>

                </xpath>


                <xpath expr="//field[@name='phone']"
                       position="attributes">
                    <attribute name="placeholder">923045425910</attribute>
                     <attribute name="required">1</attribute>
                </xpath>


                <xpath expr="//group[@name='address_details']//field[@name='street']" position="after">
                    <group>
                        <group>
                            <field name="station_id"
                                   placeholder="Station"
                                   required="1"
                                   options="{'no_open': True, 'no_create': True, 'no_edit': True}"/>
                            <field name="state_id"
                                   placeholder="Province"
                                   required="1"
                                   options="{'no_open': True, 'no_create': True, 'no_edit': True}"/>
                        </group>
                        <group>
                            <field name="district_id" placeholder="District"
                                   class="o_address_city" required="1"
                                   options="{'no_create': True, 'no_edit': True, 'no_open': True}"/>
                            <field name="zip" />
                        </group>
                        <group>

                            <field name="country_id" placeholder="Country"
                                   class="o_address_country"
                                   readonly="False"
                                   options="{'no_create': True, 'no_edit': True, 'no_open': True}"/>
                        </group>

                    </group>


                </xpath>


            </field>
        </record>

    </data>
</odoo>