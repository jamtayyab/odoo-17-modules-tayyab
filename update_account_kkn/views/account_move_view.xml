<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="account_move_form_view_inherit" model="ir.ui.view">
        <field name="name">account.move.form.view.inherit</field>
        <field name="model">account.move</field>
        <field name="inherit_id" ref="account.view_move_form" />
        <field name="arch" type="xml">
            <!-- main form  -->
            <xpath expr="//field[@name='partner_id']" position="attributes">
                <attribute name="domain">
                    [('contact_type','=',context.get('custom_contact_type')), ('unique_id','!=','New')]
                </attribute>
            </xpath>

            <xpath expr="//field[@name='invoice_payment_term_id']" position="attributes">
                <attribute name="options">
                    {'no_quick_create': True,
                    'no_create_edit': True ,
                    'no_open' : True ,
                    'no_create': True, 'no_edit': True
                    }
                </attribute>
            </xpath>

            <xpath
                expr="//sheet[1]/group[1]/group[2]//field[@name='partner_bank_id']"
                position="attributes">
                <attribute name="options">
                    {'no_quick_create': True,
                    'no_create_edit': True ,
                    'no_open' : True ,
                    'no_create': True, 'no_edit': True
                    }
                </attribute>
            </xpath>
            <!-- Invoice line page  -->

            <xpath expr="//sheet[1]/notebook[1]/page[1]/field[1]/tree[1]//field[@name='product_id']"
                position="attributes">
                <attribute name="options">
                    {'no_quick_create': True,
                    'no_create_edit': True ,
                    'no_open' : True ,
                    'no_create': True, 'no_edit': True
                    }
                </attribute>
            </xpath>

            <xpath expr="//sheet[1]/notebook[1]/page[1]/field[1]/tree[1]//field[@name='account_id']"
                position="attributes">
                <attribute name="options">
                    {'no_quick_create': True,
                    'no_create_edit': True ,
                    'no_open' : True ,
                    'no_create': True, 'no_edit': True
                    }
                </attribute>
            </xpath>
            <!-- journal item page      -->
            <xpath expr="//sheet[1]/notebook[1]/page[2]/field[1]/tree[1]//field[@name='account_id']"
                position="attributes">
                <attribute name="options">
                    {'no_quick_create': True,
                    'no_create_edit': True ,
                    'no_open' : True ,
                    'no_create': True, 'no_edit': True
                    }
                </attribute>
            </xpath>     
            
            <xpath expr="//sheet[1]/notebook[1]/page[2]/field[1]/tree[1]//field[@name='partner_id']"
                position="attributes">
                <attribute name="options">
                    {'no_quick_create': True,
                    'no_create_edit': True ,
                    'no_open' : True ,
                    'no_create': True, 'no_edit': True
                    }
                </attribute>
            </xpath>
            <!-- Other Info page      -->
            <xpath
                expr="//sheet[1]/notebook[1]/page[3]/group[1]/group[1]//field[@name='invoice_user_id']"
                position="attributes">
                <attribute name="options">
                    {'no_quick_create': True,
                    'no_create_edit': True ,
                    'no_open' : True ,
                    'no_create': True, 'no_edit': True
                    }
                </attribute>
            </xpath>
            <xpath
                expr="//sheet[1]/notebook[1]/page[3]/group[1]/group[1]//field[@name='partner_bank_id']"
                position="attributes">
                <attribute name="options">
                    {'no_quick_create': True,
                    'no_create_edit': True ,
                    'no_open' : True ,
                    'no_create': True, 'no_edit': True
                    }
                </attribute>
            </xpath>

            <xpath
                expr="//sheet[1]/notebook[1]/page[3]/group[1]/group[2]//field[@name='company_id']"
                position="attributes">
                <attribute name="options">
                    {'no_quick_create': True,
                    'no_create_edit': True ,
                    'no_open' : True ,
                    'no_create': True, 'no_edit': True
                    }
                </attribute>
            </xpath>
            <xpath
                expr="//sheet[1]/notebook[1]/page[3]/group[1]/group[2]//field[@name='invoice_incoterm_id']"
                position="attributes">
                <attribute name="options">
                    {'no_quick_create': True,
                    'no_create_edit': True ,
                    'no_open' : True ,
                    'no_create': True, 'no_edit': True
                    }
                </attribute>
            </xpath>

            <xpath
                expr="//sheet[1]/notebook[1]/page[3]/group[1]/group[2]//field[@name='fiscal_position_id']"
                position="attributes">
                <attribute name="options">
                    {'no_quick_create': True,
                    'no_create_edit': True ,
                    'no_open' : True ,
                    'no_create': True, 'no_edit': True
                    }
                </attribute>
            </xpath>

            <xpath
                expr="//sheet[1]/notebook[1]/page[3]//field[@name='campaign_id']"
                position="attributes">
                <attribute name="options">
                    {'no_quick_create': True,
                    'no_create_edit': True ,
                    'no_open' : True ,
                    'no_create': True, 'no_edit': True
                    }
                </attribute>

            </xpath>

