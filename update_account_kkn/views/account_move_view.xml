                    'no_create': True, 'no_edit': True
                    }
                </attribute>

            </xpath>
            <xpath
                expr="//sheet[1]/notebook[1]/page[3]//field[@name='source_id']"
                position="attributes">
                <attribute name="options">
                    {'no_quick_create': True,
                    'no_create_edit': True ,
                    'no_open' : True ,
                    'no_create': True, 'no_edit': True
                    }
                </attribute>

            </xpath>
        </field>


    </record>
</odoo>